<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Launcher.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
    </style>

    <style name="UsuallyCardViewStyle" parent="CardViewStyle">
        <item name="cardBackgroundColor">@color/usuallyCardColour</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="PleasureCardViewStyle" parent="UsuallyCardViewStyle">
        <item name="cardBackgroundColor">@color/pleasureCardColour</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="DangerousCardViewStyle" parent="PleasureCardViewStyle">
        <item name="cardBackgroundColor">@color/dangerousCardColour</item>
    </style>

    <style name="TodayKindCardViewStyle" parent="PleasureCardViewStyle">
        <item name="cardBackgroundColor">#00A9FF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CalendarStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorLikeGreenBut4CAF50</item>
        <item name="android:windowBackground">@color/calendarBackground</item>
        <item name="android:colorControlActivated">@color/calendarSelected</item>
        <item name="android:textColorPrimary">@color/calendarTextColor</item>
        <item name="android:textColorSecondary">@color/calendarTextColor</item>
    </style>

</resources>
